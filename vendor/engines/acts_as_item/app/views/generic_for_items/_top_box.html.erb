<ul id="top_elems" class="subsection_tabs">  
	<li class="tabs" id="commented">
		<a href="#one"><%= image_tag('/images/icons/comments_48.png')%></a>
		<div id="commented_tip" style="display:none;" class="tipTitle"><%=I18n.t('home.index.most_commented')%></div>
		<script type='text/javascript'>
                      //<![CDATA[
                        new Tip('commented',  $('commented_tip'),
                            { effect: 'appear',
                              duration: 1,
                              delay:0,
                              hook: { target: 'topMiddle', tip: 'bottomMiddle' },
                              hideOn: { element: 'tip', event: 'mouseout' },
                              stem: 'bottomMiddle',
                              hideOthers: 'true',
                              hideAfter: 1,
                              width: 'auto',
                              border: 1,
                              offset: { x: 0, y: 3 },
                              radius: 0
                            });
                      //]]>
                    </script>
	</li>
    <li class="tabs" id="rated">
    	<a href="#two"><%= image_tag('/images/icons/rate_48.png')%></a>
