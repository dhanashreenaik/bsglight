<% form_for ['admin', @current_object], :builder => BlankFormBuilder do |f| %>
<div class="itemShowLeft">
	<div class="itemShowLeftBody">
		<h2><%= I18n.t('comment.edit.title') %></h2>

		<label class="noInput">Related <%= @current_object.commentable_type%></label>

		<formElement>
			<a href="/admin/#{@current_object.commentable_type.underscore.pluralise}/#{@current_object.commentable_id}">
				<%= @current_object.commentable.title%>
			</a>
		</formElement>

	    <%= f.text_area :text, :label => I18n.t('comment.field.text') %>

	    <button type="submit" class="submitButton"><span>
			<%= @current_object.new_record? ? I18n.t('general.button.create') : I18n.t('general.button.update')%>
		</span></button>
	</div>
</div>

<div class="rightBlocks">
	<div class="itemShowDate">
		<%= I18n.l Time.now, :format =>:verb %>
	</div>
	<div class="itemShowRightBlock">
		<div class="blockCornerLeft"></div><div class="blockElementHeader twoH">
			<%= I18n.t('comment.field.state') %>
		</div><div class="blockCornerRight"></div>
		<div class="blockElementBody noLabel">
			 <%= f.select :state, ['posted', 'validated', 'rejected'], :label => " " %>
		</div>
    </div>
</div>
<% end %>