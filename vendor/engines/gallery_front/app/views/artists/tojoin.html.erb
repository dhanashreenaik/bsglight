
<div id="specific_menu">
  <% if @groups.first %>
    <% for i in 0..(@groups.size-1) %>
      <% if [0,5,10,15,20,25,30,35,40,45].include?(i) %>
        <div id='nav_3'><ul>
           <%if params[:group_id].blank?%>
                <li><a href="/tojoin" class="liselected">To Join</a></li>
           <%else%>
           <li><a href="/tojoin/<%=params[:group_id]%>" class="liselected">To Join</a></li>
           <%end%>
            
            
      <% end %>
          <li><a href='<%= "/groups/#{@groups[i].id}"%>'  class="liselected"><%= @groups[i].title %></a></li>
    <% if [4,9,14,19,24,29,34,39,44,49].include?(i) || i == (@groups.size-1) %>
          </ul></div>
    <% end %>
    <% end %>
  <% else %>
    <div id='nav_3'>
      <ul><li>No artists for that group</li></ul>
    </div>
  <% end %>
</div> 
