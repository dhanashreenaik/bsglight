<%= superadmin_tabs_generator() %>

<div class="objectListWithTab">
  <div class="blockCornerLeft"></div><div class="blockElementHeader sevH">
    <span id="item_count">Mailing Settings</span>
  </div><div class="blockCornerRight"></div>

  <div class="contentList superadmin">
    <% form_for :mailingr_config,
      @mailing_config_hash,
      :url => updating_superadmin_mailing_settings_path,
      :html => {:method => :put, :multipart => true} do |f| -%>

      <label>Host:</label>
      <div class="formElement"><%= f.text_field :sa_mailing_host, :noHint => "yes" %></div>

      <label>Port:</label>
      <div class="formElement"><%= f.text_field :sa_mailing_port, :noHint => "yes" %></div>

      <label>Username:</label>
      <div class="formElement"><%= f.text_field :sa_mailing_user_name, :noHint => "yes" %></div>

      <label>Password:</label>
      <div class="formElement"><%= f.password_field :sa_mailing_password, :noHint => "yes" %></div>

      <label>SSL enable ?:</label>
      <div class="formElement"><%= f.check_box :sa_mailing_enable_ssl %></div>

      <button type="submit" class="submitButton"><span><%=I18n.t('general.button.update')%></span></button>
    <% end %>
  </div>
</div>