<%= superadmin_tabs_generator() %>

<div class="objectListWithTab">
  <div class="blockCornerLeft"></div><div class="blockElementHeader sevH">
    <span id="item_count">Mailer Settings</span>
  </div><div class="blockCornerRight"></div>

  <div class="contentList superadmin">
    <% form_for :ecom_config,
      @ecom_config_hash,
      :url => updating_superadmin_ecom_settings_path,
      :html => {:method => :put, :multipart => true} do |f| -%>

      <label> Active Merchant</label>

      <label>Gateway:</label>
      <div class="formElement"><%= f.text_field :sa_active_merchant_gateway, :noHint => "yes" %></div>

      <label>Login:</label>
      <div class="formElement"><%= f.text_field :sa_active_merchant_login, :noHint => "yes" %></div>

      <label>Password:</label>
      <div class="formElement"><%= f.password_field :sa_active_merchant_password, :noHint => "yes" %></div>

      <label> Direct Banking</label>




      <button type="submit" class="submitButton"><span><%=I18n.t('general.button.update')%></span></button>
    <% end %>
  </div>
</div>