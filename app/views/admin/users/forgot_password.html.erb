<div id="headerForm"></div>
<div id="content_login">
	<h1><%=I18n.t('user.forgot_password.title')%></h1>

	<%= flash[:notice_forgot] ? content_tag(:div, flash[:notice_forgot], :class => 'notice') : content_tag(:div, flash[:error_forgot], :class => 'error') %>

	<% form_for :user, :url => admin_forgot_password_path, :html => {:method => :post} do |f| %>

    	<%= f.error_messages %>

    	<p><%=I18n.t('user.forgot_password.password_label')%></p>
    	<%= f.text_field :email, :size => 35, :class => 'forgotPassword' %>

		<div id="sub_but"><button type="submit" class="submit_button"><%=I18n.t('general.button.send')%></button></div>

	<% end %>
	<div id="actionlogin">
		<div id="backToLogin"><%= link_to I18n.t('user.forgot_password.back_to_login'), admin_login_path %></div>
	</div>
</div>
<div id="footerLogin">
  <p><%=  I18n.t 'layout.footer.title' %></p>
</div>

