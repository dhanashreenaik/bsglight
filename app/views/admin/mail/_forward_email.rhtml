<h2>Compose</h2>

<% form_for :message, :url=>"/admin/create_sent_mail/#{forward_email.id}" do |f| %>

  <p>
    To:<br />
    <%= checklist "message[to][]", User.find(:all), :id, :login, forward_email.to %>
  </p>

  <p>Subject: <%= f.text_field :subject %></p>
  <p>Body:<br /> <%= f.text_area :body %></p>
  <p><%= submit_tag "Send" %></p>
<% end %>
