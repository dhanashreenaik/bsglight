sse<%=eu.exhibition.id%>.pre_update_hook = function() {
  return;
}

sse<%=eu.exhibition.id%>.post_update_hook = function() {
  // For the select list with the slide titles,
  // set the selected item to the current slide
  document.sse<%=eu.exhibition.id%>_form.sse<%=eu.exhibition.id%>_select.selectedIndex = this.current;
  return;
}

if (document.images) {

