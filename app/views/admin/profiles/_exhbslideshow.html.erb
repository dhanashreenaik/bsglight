function config_sse<%=eu.exhibition.id%>_select() {
  var selectlist = document.sse<%=eu.exhibition.id%>_form.sse<%=eu.exhibition.id%>_select;
  selectlist.options.length = 0;
  for (var i = 0; i < sse<%=eu.exhibition.id%>.slides.length; i++) {
