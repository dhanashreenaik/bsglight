<div class="addingMenuSection">
		<% remote_form_for  @menu,
		   					:url => (@menu.new_record? ? (admin_website_menus_path(@website.id, :parent_id => @menu.parent_id)) : (admin_website_menu_path(@website.id, @menu.id))),
		   					:method => (@menu.new_record? ? :post : :put) do |f|%>

			<p>
				This form helps you to create a menu node for the current website, create a name and select a page you want to display and let's rock.
			</p>
			
			<label>Name :*</label>
			<div class="formElement">
				<%= f.text_field :name%>	
			</div>
			
			<label>URL :</label>
			<div class="formElement">
			  	<%= f.select :url, [['No Link', '#']] + (@pages.collect {|p| [ p.title, p.title_sanitized ] } if @pages) %>
			</div>				
			<button type="submit" class="submitButton"><span>Submit</span></button>
		<% end %>
</div>