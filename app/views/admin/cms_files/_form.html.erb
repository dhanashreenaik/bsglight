<% form_for_item @current_object, title do |f| -%>
  <% f.field :cmsfile, :label => I18n.t('cms_file.field.file_label')+ " :" do %>
    <%= File.basename(@current_object.cmsfile.url) + '<br />' if @current_object.cmsfile_file_name %>
    <%= file_field "cms_file", 'cmsfile', :class => 'file',
      :onChange=>"LimitAttach(this.form, this.form.cms_file_cmsfile.value, ['.txt','.doc','.pdf'],
      \"#{I18n.t("item.common_word.invalid_type_alert", :types => ['.txt','.doc','.pdf'].join(', '))}\")" %>
  <% end %>
<% end -%>
